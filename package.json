{
  "name": "qqlite",
  "version": "1.0.0",
  "description": "a light version of qq",
  "type": "module",
  "bin": "dist/bundle.js",
  "exports": "./index.js",
  "author": "Dreagonmon",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "graphql": "^16.3.0",
    "graphql-ws": "^5.6.1",
    "hjson": "^3.2.2",
    "log4js": "^6.4.1",
    "oicq": "^2.2.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@types/hjson": "^2.4.3",
    "@types/node": "^17.0.19",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "bundle": "npm run lint && tsc --build && npx esbuild dist/index.js --bundle --minify --platform=node --outfile=dist/bundle.js",
    "build": "npm run bundle && npx pkg .",
    "clean": "tsc --build --clean",
    "lint": "eslint index.ts qqcore schema utils scripts --fix",
    "build-schema": "tsc --build && node dist/scripts/get-graphql-schema.js > static/schema.graphql"
  },
  "pkg": {
    "scripts": "dist/bundle.js",
    "assets": "static/build/**/*",
    "targets": [
      "node16-linux-x64",
      "node16-win-x64"
    ],
    "outputPath": "dist"
  }
}
